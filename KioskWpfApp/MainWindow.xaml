<Window x:Class="KioskWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioskWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Canvas x:Name="MainScreen" Background="Black" Margin="-2,0,1,0" Visibility="Collapsed" >
            <Image Source="tim-mossholder-FH3nWjvia-U-unsplash.jpg" MouseLeftButtonDown="MainMouseLeftButtonDown" 
           Stretch="Fill"
           Width="563" Height="279" Canvas.Left="94" Canvas.Top="3"
               Cursor="Hand"/>

            <TextBox Text=">"
             Background="Transparent"
             Foreground="White"
             FontSize="120"
             BorderThickness="0"
             Width="100" Height="156"
             Canvas.Left="541"
             Canvas.Top="117" RenderTransformOrigin="0.49,0.596" MouseLeftButtonDown="MainMouseLeftButtonDown"
             Cursor="Hand"/>
        </Canvas>


        <Canvas x:Name="SecondScreen" Background="LightBlue" Visibility="Visible">

            <!-- Optional back button -->
            <Button Content="Back"
            Canvas.Left="10" Canvas.Top="10"/>


            <ListBox ItemsSource="{Binding ImageList}"
             Canvas.Left="0" Canvas.Top="60"
             Width="760" Height="220"
             Background="Transparent"
             BorderThickness="0"
             ScrollViewer.HorizontalScrollBarVisibility="Auto"
             ScrollViewer.VerticalScrollBarVisibility="Disabled">


                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal"
                                        IsVirtualizing="True"
                                        VirtualizationMode="Recycling"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Height="200" Margin="5">
                            <Image Source="{Binding ImagePath}"
                           Stretch="Fill"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           MouseLeftButtonDown="Image_Click"/>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid x:Name="Order" Visibility="Hidden">
                <TextBox x:Name="OrderBox" Width="322" Height="116" HorizontalContentAlignment="Center" RenderTransformOrigin="0.498,0.593" Canvas.Top="276" Canvas.Left="170" Margin="166,297,-166,-297">
                    Do you want to Order ?

                </TextBox>
                <Button Content="Yes" Height="27" Canvas.Left="244" Canvas.Top="352" Width="70" Margin="243,365,9,-276" Click="OrderYes_MouseLeftButtonDown"/>
                <Button Content="No" Height="27" Canvas.Left="345" Canvas.Top="352" Width="70" Margin="326,365,-74,-276" Click="OrderNo_MouseLeftButtonDown"/>
            </Grid> 




        </Canvas>
    </Grid>


</Window>
